{% extends 'base.html.twig' %}

{% block body %}
	<h1>Liste des joueurs</h1>

	<div class="d-flex flex-wrap  bd-highlight mb-3">
		{% for joueur in joueurs %}
			<div class="card border-primary mb-3 " style="width: 25rem; margin-right: 2rem; ">
				<div class="card-header">Joueur n°{{joueur.id}}</div>
				<div class="card-body">
					<h2 class="card-title">{{ joueur.nom }}
						{{ joueur.prenom }}</h2>


					<p>Né le
						{{joueur.dateNaissance | date('d/m/Y')}}</p>
					<img src="{{joueur.photoJoueur}}" alt="">


				</div>
				<a href="{{ path('un_joueur', {'id': joueur.id}) }}" class="btn btn-primary">voir les détails</a>

			</div>
		{% endfor %}
	</div>
{% endblock %}
